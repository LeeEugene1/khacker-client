{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/components/*": ["src/components/*"],
      "@/hook/*": ["hook/*"],
      "@/store/*": ["store/*"],
      "@/pages/*": ["pages/*"],
      "@/public/*": ["public/*"]
      // "@/layout/*": ["components/layout/*"],
      // "@/styled/*": ["components/layout/*"]
    },
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "pages/_document.jsx", "pages/qna/qna.jsx", "pages/_app.jsx"],
  "exclude": ["node_modules"]
}
